<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pagemodels="clr-namespace:JwtAuth.MAUI.PageModels"
             x:Class="JwtAuth.MAUI.Pages.UserDetailPage"
             x:DataType="{x:Type pagemodels:RegisterPageModel}"
             Title="User Detail">
    <Grid ColumnDefinitions="1*,1*">
        <VerticalStackLayout>
            <Label Text="Account" />
            <HorizontalStackLayout>
                <Label Text="Username" FontSize="18" />
                <Button Text="Change password" />
            </HorizontalStackLayout>
            <Label Text="User Id" />
            <Label Text="Account holder since" />
            <Label Text="Account last updated" />
            <HorizontalStackLayout>
                <Label Text="Roles" />
                <Button Text="Change roles" />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Token" />
                <Button Text="Show/Hide" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Column="1">
            <Label Text="Profile" />
            <HorizontalStackLayout>
                <Label Text="First Name" />
                <Button Text="Update profile" />
            </HorizontalStackLayout>
            <Label Text="Last Name" />
            <Label Text="Email" />
            <Label Text="Phone" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
