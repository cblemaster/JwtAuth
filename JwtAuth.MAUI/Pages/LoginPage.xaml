<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pagemodels="clr-namespace:JwtAuth.MAUI.PageModels"
             x:Class="JwtAuth.MAUI.Pages.LoginPage"
             x:DataType="{x:Type pagemodels:LoginPageModel}"
             Title="Login">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout HorizontalOptions="Center">
        <Label Text="Username:" />
        <Entry Text="{Binding LoginUser.Username, Mode=OneWayToSource}"
               Placeholder="username" MaxLength="50" Margin="0,0,0,40" MinimumWidthRequest="200" />
        <Label Text="Password:" />
        <Entry Text="{Binding LoginUser.Password, Mode=OneWayToSource}"
               IsPassword="True" Placeholder="password" MaxLength="50" Margin="0,0,0,20" />
        <Button Command="{Binding LoginCommand, Mode=OneWay}" Text="Login" Margin="0,0,0,40" />
    </VerticalStackLayout>
</ContentPage>
